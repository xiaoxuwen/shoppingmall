/**index.wxss**/
.banner {
  width: 750rpx;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 300rpx;
}

.m-menu {
  display: flex;
  height: 181rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.m-menu .item {
  flex: 1;
  display: block;
  width: 150rpx
}

.m-menu image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
}

.m-menu text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}




    /**index.wxss**/
    .swiper-tab{
    	width: 100%;
    	text-align: center;
    	line-height: 40rpx;
      padding: 20rpx 0;
      background: #fff;
      }

       .swiper-tab:nth-child(1),.swiper-tab:nth-child(2){
         border-top:1rpx solid #e6e6e6;
       }

    .swiper-tab-list{ 
      font-size: 30rpx;
      display: inline-block;
    	width: 33.33%;
      border-right: 1rpx solid #e6e6e6;
    	color: #999;
    }

    .on{ 
      color: #333333;
      }
     
    .swiper-box{ 
      display: block; 
      height: 100%; 
      width: 100%; 
      overflow: hidden; 
      background: #fff;
      }

    .swiper-box .product-info{
      width: 710rpx;
      padding:10rpx 20rpx;
    }

      .swiper-box  .pd-list{
      width:710rpx;
      display:flex;
      flex-direction:column;
    
    }

    .swiper-box  .pd-list image{
       width:165rpx;
       height: 125rpx;
       display: inline-block;
       border-radius: 5rpx;
    }

     .pd-wap{
      display:flex;
      flex-direction:row;
      padding: 15rpx 0;
      border-bottom: 1rpx solid #e8e8e8;
      overflow: hidden;
    } 

    .pd-tetx{
      margin-left:15rpx;
       display:flex;
      flex-direction:column;
      width:550rpx; 
    }

